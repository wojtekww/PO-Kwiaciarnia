
@model IEnumerable<Product>
<h5 class="margin-breadcrumbs"><a asp-action="Index">Panel pracownika</a> <span class="glyphicon glyphicon-menu-right"></span> Katalog</h5>

<a asp-action="AddProduct">
    <p class=" glyphicon-style">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Dodaj nowy produkt
    </p>
</a>
@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">Brak produktów w bazie danych.</td></tr>
}
else
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>Nazwa Produktu</th>
            <th>Kategoria</th>
            <th>Cena</th>
        </tr>

        @foreach (Product product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price</td>

                <td>

                    <a asp-action="EditProduct" asp-route-id="@product.Id">
                        <span class="glyphicon glyphicon-edit glyphicon-style"></span>
                    </a>
                    <a asp-action="DeleteProduct" asp-route-id="@product.Id" onclick="return confirm('Czy na pewno chcesz usunąć produkt? \nID: @product.Id \nNazwa: @product.Name');">
                        <span class="glyphicon glyphicon-remove glyphicon-style"></span>
                    </a>
                </td>
            </tr>
        }
    </table>
}


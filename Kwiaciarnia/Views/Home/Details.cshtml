@model Product

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.Description</h4>

    </div>

</div>
<div class="addToCart">
    <p class="button pull-right">
        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
           asp-route-productId="@Model.Id">Dodaj do koszyka</a>
    </p>
</div>